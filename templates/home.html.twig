{% extends 'base.html.twig' %}

{% block content %}
    <h2 class="h2-home-newBook"><a href="/add" class="links">->&nbsp;New&nbsp;book&nbsp;<-</a></h2>
    {% if keywords is not empty %}
        <div class="flex-home">
            <div class="block-home-booklouds">
                <h2 class="h2-home-titles">Booklouds</h2>
                <div class="grid-booklouds">
                    {#
                    {% for keyword in keywords %}
                        <p class="text-center"><a href="/bookloud/{{ keyword.id }}" class="links">{{ keyword.name }}</a></p>
                    {% endfor %}
                    #}
                    {{ cloudWord|raw }}
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center">No books or booklouds to show for the moment...</p>
    {% endif %}
{% endblock %}
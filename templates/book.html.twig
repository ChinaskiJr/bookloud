{% extends 'base.html.twig' %}

{% block content %}
    <div class="block-showBook">
        <h2 class="h2-add">{{ book.title }}</h2>
        <ul class="ul-add">
            {% for keyword in book.keywords %}
                <li><a href="/bookloud/{{ keyword.id }}" class="links">{{ keyword.name }}</a></li>
            {% endfor %}
        </ul>
        <button type="button" class="btn btn-info"><a href="/edit/book/{{ book.id }}" class="links">Edit this book</a></button>
        <button type="button" class="btn btn-danger"><a href="/delete/book/{{ book.id }}" class="links">Delete this book</a></button>
    </div>
{% endblock %}